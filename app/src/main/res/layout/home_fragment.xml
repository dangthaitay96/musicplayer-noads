<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    tools:context=".activities.MainActivity">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_button"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="#4682B4" />


        <TextView
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="start"
            android:textColor="#333"
            android:textSize="16sp"
            android:textStyle="bold" />


        <!-- Animated visualizer placeholder -->
        <ImageView
            android:id="@+id/rotating_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baru"
            android:background="@drawable/visualizer_placeholder" />


        <!-- SeekBar để tua và hiển thị thời gian -->
        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:progressTint="#1E90FF"
            android:thumbTint="#1E90FF" />

        <!-- Hiển thị thời gian phát -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="12sp"
                android:textColor="#444" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="12sp"
                android:textColor="#444" />
        </LinearLayout>



        <!-- Control buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageButton
                android:id="@+id/btn_back_5s"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:src="@android:drawable/ic_media_rew"
                app:tint="#1E90FF" />

            <ImageButton
                android:id="@+id/btn_prev"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:src="@android:drawable/ic_media_previous"
                app:tint="#1E90FF" />

            <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:src="@android:drawable/ic_media_play"
                app:tint="#4682B4" />

            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:src="@android:drawable/ic_media_next"
                app:tint="#1E90FF" />

            <ImageButton
                android:id="@+id/btn_forward_5s"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:src="@android:drawable/ic_media_ff"
                app:tint="#1E90FF" />
        </LinearLayout>

    </LinearLayout>

    <!-- Navigation Drawer for song list -->
    <ListView
        android:id="@+id/song_list_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#E6F0FA" />


</androidx.drawerlayout.widget.DrawerLayout>
